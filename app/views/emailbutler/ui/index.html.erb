<div id="dashboard">
  <ul class="summary">
    <li>
      <%= link_to ui_path(:all), class: 'status-summary' do %>
        <span><%= @summary.values.sum %></span>
        <span>Total</span>
      <% end %>
    </li>
    <% Emailbutler.adapter.message_class.statuses.each do |key,value| %>
      <li>
        <%= link_to ui_path(value), class: 'status-summary' do %>
          <span><%= key %></span>
          <span><%= value %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
